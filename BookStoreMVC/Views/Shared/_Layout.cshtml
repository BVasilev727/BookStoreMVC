<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStoreMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStoreMVC.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wdth,wght@0,75..100,100..900;1,75..100,100..900&display=swap" rel="stylesheet">
    <style>
        /* Global Dark Mode Styling */
        body {
            background-color: #121212; /* Dark background */
            color: #ffffff; /* Light text */
        }

        a {
            color: #bb86fc;
            text-decoration:none/* Accent color for links */
        }

            a:hover {
                color: #ff79c6;
            }

        .navbar {
            background-color: #1f1f1f; /* Dark navbar background */
        }

            .navbar a {
                color: #ffffff;
            }

        .btn {
            background-color: #bb86fc; /* Accent color for buttons */
            color: #121212; /* Dark text for contrast */
            border: none;
        }

            .btn:hover {
                background-color: #ff79c6; /* Slightly brighter button on hover */
            }

        .card {
            background-color: #1e1e1e; /* Dark card background */
            border: 1px solid #333333; /* Subtle border for cards */
        }

        .card-title,
        .card-text {
            color: #ffffff; /* Light text for cards */
        }

        .form-control {
            background-color: #1e1e1e; /* Dark input fields */
            color: #ffffff;
            border: 1px solid #333333;
        }

            .form-control:focus {
                background-color: #1e1e1e;
                color: #ffffff;
                border-color: #bb86fc;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">YouVideo</a>
                @if(User.IsInRole("Admin"))
                {
                    <a class="navbar-brand text-white" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                }
                <a class="navbar-brand text-white" asp-area="" asp-controller="Video" asp-action="Index">Videos</a>
                @if(User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Video" asp-action="MyFavorites">My favorites</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name ="_LoginPartial.cshtml" /> 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
